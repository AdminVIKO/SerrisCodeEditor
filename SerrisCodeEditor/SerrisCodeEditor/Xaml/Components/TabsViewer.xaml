                    <Button x:Name="SelectListButton" Grid.Column="1" HorizontalAlignment="Stretch" Margin="5" Height="30" VerticalAlignment="Stretch" Foreground="#FFF7F7F7" Visibility="Visible" Background="Transparent" FontSize="14" BorderBrush="#FF3C097A" BorderThickness="1" Style="{StaticResource TabsManageButtonStyle}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="5" Click="SelectListButton_Click">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0"/>
                            <TextBlock HorizontalAlignment="Center" FontFamily="Segoe UI" Text="List / Project" FontSize="14" Grid.Column="1"/>
                        </Grid>
                    </Button>
                </Grid>

                <StackPanel x:Name="CreationTabOptions" Margin="15,10,15,0" Visibility="Visible">
                    <RadioButton x:Name="BlankTabRadioButton" GroupName="TabContentType" Content="Blank tab" IsChecked="True" Checked="BlankTabRadioButton_Checked"/>
                    <RadioButton x:Name="TabTemplateRadioButton" GroupName="TabContentType" Content="Use tab template" Checked="TabTemplateRadioButton_Checked"/>
                    <ListView x:Name="TabTemplatesListView" Background="Transparent" MaxHeight="300" Foreground="White" ItemsSource="{Binding Source={StaticResource TabTemplatesList}}" Loaded="TabTemplatesListView_Loaded" SelectionChanged="TabTemplatesListView_SelectionChanged" ItemTemplate="{StaticResource TabTemplateItem}" SelectedIndex="-1" BorderBrush="White" BorderThickness="2" Visibility="Collapsed" Margin="0,5,0,0">
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Key}"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                                <GroupStyle.Panel>
                                    <ItemsPanelTemplate>
                                        <VariableSizedWrapGrid/>
                                    </ItemsPanelTemplate>
                                </GroupStyle.Panel>
                            </GroupStyle>
                        </ListView.GroupStyle>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="-5,0,-5,0"/>
                                <Setter Property="MaxHeight" Value="160"/>
                                <Setter Property="MinHeight" Value="30"/>
                                <!-- -12, 0-->
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </StackPanel>

                <Grid x:Name="CreationListOptions" Margin="15,10,15,0" Visibility="Collapsed">
                    <StackPanel>
                        <RadioButton x:Name="DefaultListRadioButton" GroupName="ListContentType" Content="Default tabs list" IsChecked="True"/>
                        <RadioButton x:Name="NewProjectRadioButton" GroupName="ListContentType" Content="New project"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </StackPanel>


        <ListView Grid.Row="1" x:Name="Tabs" ItemTemplate="{StaticResource Tab}" SelectionChanged="Tabs_SelectionChanged" ScrollViewer.VerticalScrollBarVisibility="Hidden" Padding="0,4,0,0" >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter x:Name="ItemLarge" Property="Margin" Value="-12,0,-12,0"/>
                    <Setter Property="MaxHeight" Value="160"/>
                    <Setter Property="MinHeight" Value="30"/>
                    <!-- -12, 0-->
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding path}" FontSize="40" />
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
        </ListView>


    </Grid>
</UserControl>
